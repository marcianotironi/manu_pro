<div class="container">
  <div class="row justify-content-center">
    <h4 class="mt-4 mb-4 display-4">Edit Post</h4>
  </div>
  <div class="row justify-content-center">
    <%= form_with(model: @equipamentos, local: true) do |f| %>
      <div class="form-group">
        <%= f.label "Descrição:" %>
        <%= f.text_field :descricao, class: 'form-control' %>
      </div>
      
      <div class="form-group">
        <%= f.submit class: 'form-control btn-primary' %>
      </div>
    <% end %>
  </div>
</div>