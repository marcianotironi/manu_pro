<% if current_user %>
    <div class='' style='margin: 20px;'>
        
        <table class="table table-striped table-bordered "> 
            <thead class="thead-dark">
                <tr>
                    <th scope="col">ID</th>
                    <th scope="col">Descrição</th>
                    
                    <th scope="col" class='text-center'>Detalhes</th>
                    <th scope='col' class='text-center' colspan='2'> <%= link_to 'Novo Equipamento', new_equipamento_path %></th>
                </tr>
            </thead>
            <tbody>
                <% @equipamentos.each do |equipamento| %>
                    <tr>
                        <td scope="row"><%=equipamento.id  %></th>
                        <td> <%= equipamento.descricao %></td>
                        <td class='text-center'> <%= link_to 'Visualizar', equipamento_path(equipamento.id) %></td>
                        <td class='text-center'> <%= link_to 'Editar', edit_equipamento_path(equipamento.id)%></td>
                        <td class='text-center'> <%= link_to 'Apagar', equipamento_path(equipamento.id), method: :delete, data: { confirm: 'Realmente deseja excluir' } %></td>
                    </tr>
                <% end%>
            </tbody>
        </table>
    </div>
<% end %>   