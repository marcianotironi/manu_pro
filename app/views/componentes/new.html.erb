<div class="container">
  <div class="row justify-content-center">
    <h4 class="mt-4 mb-4 display-4">Novo Componente</h4>
  </div>
  <div class="row justify-content-center">
    <%= form_with scope: :componente, url: componentes_path, local: true do |form| %>
      <div class="form-group">
        <%= form.label :descricao %>
        <%= form.text_field :descricao, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :equipamento_id %>
        <%= form.text_field :equipamento_id, class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= form.submit class: 'form-control btn-primary' %>
      </div>
    <% end %>
  </div>
</div>